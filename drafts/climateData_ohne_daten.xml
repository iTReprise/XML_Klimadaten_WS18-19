<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="climateData.xsl"?>
<!DOCTYPE climateData SYSTEM "climateData.dtd">
<climateData
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="/climateData.xsd"
  locationID="xxxxx">

  <longitude unit="decimal_degrees">xx</longitude>
  <latitude unit="decimal_degrees">xx</latitude>

  <entry date="yyyy.mm.dd" time="hh:mm" standard="UTC">
    <temperature>
      <curTemp unit="C" xsi:nil="false">xx</curTemp>
      <avgTemp unit="C" xsi:nil="false">xx</avgTemp>
      <maxTemp unit="C" xsi:nil="false">xx</maxTemp>
      <minTemp unit="C" xsi:nil="false">xx</minTemp>
    </temperature>

    <surface>
      <avgSurTemp unit="C" xsi:nil="false">xx</avgSurTemp>
      <maxSurTemp unit="C" xsi:nil="false">xx</maxSurTemp>
      <minSurTemp unit="C" xsi:nil="false">xx</minSurTemp>
    </surface>
    
    <solar>
      <avgSolRad unit="W/m²" xsi:nil="true"></avgSolRad>
      <maxSolRad unit="W/m²" xsi:nil="false">xx</maxSolRad>
      <minSolRad unit="W/m²" xsi:nil="false">xx</minSolRad>
    </solar>

    <humidity>
      <avgRelHum unit="%" xsi:nil="false">xx</avgRelHum>
    </humidity>
  </entry>

</climateData>